<%= turbo_frame_tag "book_title" do %>
  <%= form_with model: @book, class: 'edit-form' do |f| %>
    <%= f.text_field :title, class: "edit-form-field", autofocus: true, data: {action: "focusout->datatable#submitEdit keyup->datatable#handleEditKeys focus->datatable#addFocusClass"} %>
    <%= f.submit style: "display: none", data: {datatable_target: 'submitEdit'} %>
    <%= link_to 'cancel', book_path(@book), data: {datatable_target: 'cancelEdit'} ,style: 'display: none' %>
  <% end %>
<% end %>

