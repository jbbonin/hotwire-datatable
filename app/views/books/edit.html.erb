<%= turbo_frame_tag "book_title" do %>
    <%= form_with model: @book do |f| %>
      <%= f.hidden_field :search_params, value: @search_params %>
      <%= f.text_field :title, class: "edit-form-field", autofocus: true %>
      <%= f.submit style: "display: none" %>
    <% end %>
<% end %>

