<%= turbo_frame_tag "book_title" do %>
  <%= form_with model: @book, class: 'edit-form', data: {action: 'keyup->datatable#cancelEdit'} do |f| %>
    <%= f.hidden_field :search_params, value: @search_params %>
    <%= f.text_field :title, class: "edit-form-field", autofocus: true, data: {action: "focusout->datatable#submitEdit"} %>
    <%= f.submit style: "display: none", data: {datatable_target: 'submitEdit'} %>
    <%= link_to 'back', books_url(search_params: @search_params), style: "display: none", data: {datatable_target: 'cancelEdit'} %>
  <% end %>
<% end %>

